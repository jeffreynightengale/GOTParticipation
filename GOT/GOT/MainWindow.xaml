<Window x:Class="GOT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://www.denofgeek.com/wp-content/uploads/2019/07/game-of-thrones-beyond-the-wall-2.jpg"/>
        </Grid.Background>
        <Button x:Name="JokeBttn" Content="Random Quote" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Height="48" Width="92" Click="JokeBttn_Click"/>
        <Button x:Name="ExportBttn" Content="Export" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Height="43" Width="92" Click="ExportBttn_Click"/>
        <Label x:Name="CharacterLbl" Content="" HorizontalAlignment="Left" Margin="587,87,0,0" VerticalAlignment="Top" Background="#FFF7F1F1" Height="24" Width="213" IsEnabled="False"/>
        <TextBox x:Name="JokeTxt" HorizontalAlignment="Left" Margin="587,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213" Height="232" IsEnabled="False"/>

    </Grid>
</Window>
